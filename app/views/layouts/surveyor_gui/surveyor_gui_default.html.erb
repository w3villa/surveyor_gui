<!DOCTYPE html>
<html>
  <head>
    <title>SurveyorGui</title>
    <%= stylesheet_link_tag    "surveyor_gui_all", :media => "all" %>
    <%= javascript_include_tag "surveyor_gui_all" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="mt-5"> id="surveyor-gui-mount-point" data-surveyor-gui-mount-point="<%= surveyor_gui.surveyforms_path %>"></div>
    <div class="container">

        <% flash.each do |key, value| %>
            <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>

        <div class="content">
            <%= yield %>
        </div>
    </div>
  </body>
</html>
